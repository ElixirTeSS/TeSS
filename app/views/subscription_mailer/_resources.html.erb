<table>
  <tbody>
  <tr>
    <td width="20"></td>
    <td>
      <% digest.each do |result| -%>
        <%= link_to(result.title, result, style: 'color: #f57d20; font-weight: bold;') %><br/>
        <% if result.respond_to?(:description) %>
          <%= truncate(result.description, length: 120, separator: ' ') %><br/><br/>
        <% end %>
      <% end -%>
    </td>
  </tr>
  </tbody>
</table>
