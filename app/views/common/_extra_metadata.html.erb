<%= display_attribute(resource, :scientific_topics) { |values| values.map{|x| x.preferred_label}.join(', ')} %>
<% if resource.respond_to?(:operations) %>
  <%= display_attribute(resource, :operations) { |values| values.map{|x| x.preferred_label}.join(', ')} %>
<% end %>
<%= display_attribute(resource, :keywords) { |values| values.join(', ')} %>
<% if resource.class.name.downcase == 'material' -%>
<%= display_attribute(resource, :resource_type) { |values| values.join(', ')} %>
<% end -%>
<%= display_attribute(resource, :target_audience) { |values| values.join(', ')} %>
<%= display_attribute(resource, :difficulty_level) { |value|  difficulty_name_for_abbreviation(value)} %>
<%= display_attribute(resource, :licence) { |value|  licence_name_for_abbreviation(value)} %>
<%= display_attribute(resource, :authors) { |values| values.join(', ')} %>
<%= display_attribute(resource, :contributors) { |values| values.join(', ')} %>
<%= display_attribute(resource, :doi) %>
<%= display_attribute(resource, :remote_created_date) %>
<%= display_attribute(resource, :remote_updated_date) %>

