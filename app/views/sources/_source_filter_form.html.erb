<div class="form-inline source-filter-form" data-id-in-filter-list="<%= f.options[:child_index] %>">
  <%= f.input :property, collection: SourceFilter.properties.keys.map { |t| [t.humanize, t] }, include_blank: false, required: false %>

  <%= f.input :value %>

  <%= f.input :mode, collection: SourceFilter.modes.keys.map { |m| [m.humanize, m] }, include_blank: false, as: :hidden %>

  <%= f.input :_destroy, as: :hidden %>

  <button type="button" class="btn btn-danger delete-source-filter-btn">Remove</button>
</div>
