<div class="wrapper">
  <div id="sidebar" class="popout-sidebar">
    <%= render :partial => 'about_nav', locals: { show: 'us' } %>
  </div>

  <div id="content" class="">
    <div class="about-block">
      <%= render :partial => 'links', :locals => { 'show': 'about' } %>

      <% @feature_count = 0 %>

      <!-- TeSS Club-->
      <div class="row">
        <div class="<%= next_about_block(@feature_count += 1) %>">
          <div id='tess-club' class="h3">TeSS Club</div>
          <div class="sub-about-block">
            <%== I18n.t('us.tess_club', site: TeSS::Config.site['title_short']) %>
          </div>
        </div>
      </div>

      <!-- CONTACT-->
      <div class="row">
        <div class="<%= next_about_block(@feature_count += 1) %>">
          <div id='contact' class="h3">Contact</div>
          <div class="sub-about-block">
            <%== I18n.t('us.contact', site: TeSS::Config.site['title_short']) %>
          </div>
        </div>
      </div>

      <!-- FUNDING-->
      <section id="funding">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='funding' class="h3">Investment for the development of the <%= TeSS::Config.site['title_short'] %>
              portal
            </div>
            <div class="sub-about-block">
              <%== raw t 'us.funding' %>
            </div>
          </div>
        </div>
      </section>

      <!-- THE TEAM-->
      <section id="team">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='team' class="h3">The Team</div>
            <%== raw t 'us.team.description' %>
            <%== raw t 'us.team.develop' %>
            <%== raw t 'us.team.working' %>
            <%== raw t 'us.team.partner' %>
            <%== raw t 'us.team.guidance' %>
          </div>
        </div>
      </section>

      <!-- ACKNOWLEDGEMENTS-->
      <section id="acknowledgements">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='acknowledgments' class="h3">Acknowledgements</div>
            <%== I18n.t('us.acknowledge', site: TeSS::Config.site['title_short']) %>
          </div>
        </div>
      </section>

      <!-- Cite -->
      <section id="cite">
        <div class="row">
          <div class="<%= next_about_block(@feature_count += 1) %>">
            <div id='cite' class="h3">Cite Us</div>
            <%== raw t 'us.cite' %>
          </div>
        </div>
      </section>
    </div>
    <%= render :partial => 'links', :locals => { 'show': 'about' } %>
  </div>
</div>
